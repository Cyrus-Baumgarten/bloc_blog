<p>POST ID: <%= @post.id %> - POSTED BY: <%= link_to @post.user.email, user_path(@post.user) %>
	
	<% unless current_user.nil? %>
		<% if current_user.admin? %>
		 - <%= link_to "edit", edit_post_path(@post) %> - <%= link_to "delete", @post, method: :delete %>
			<% end %>
	<% end %>


<p>POST TITLE: <%= @post.title %>

<p>POST CONTENT: <%= @post.body %><br>

<p>ALL COMMENTS:

	<ul>
	<%= render @comments %>
	</ul>
	
<p><%= form_for @comment do |f| %> 
	<%= f.label :content, "NEW COMMENT" %>
	<%= f.text_field :content %>
	<%= f.submit "Submit Comment"%>
<% end %>
