<p>UPDATE PROFILE
	
	<%= form_for @user do |f| %>
	<br>
	<%= f.label :name, "Username" %>
	<%= f.text_field :name %>
	<br>
	<%= f.label :image_url, "Avatar Link" %>
	<%= f.text_field :image_url %>
	<br>
	<%= f.label :anonymous, "Comment and be listed anonymously?" %>
	<%= f.check_box :anonymous, default: true %>
	<br>
	<%= f.label :subscribe, "Recieve emails when new posts are made?" %>
	<%= f.check_box :subscribe, default: false %>
	<br>
	<%= f.submit "Submit" %>
	
	<% end %>